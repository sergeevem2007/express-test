<section class="how-works bg-light pt-5 pb-6">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="fw-700 fs-28">Заголовок</h2>
			</div>
		</div>
		<div class="row justify-content-center py-3">
			<div class="swiper">
				<div class="swiper-wrapper">
				{% for item in site.howWorks %}
				<div class="swiper-slide">
					<div class="how-works__card">
						<img src="{{ item.img }}" alt="" class="img-fluid how-works__img">
						<div class="how-works__body bg-white p-4">
							<div class="fw-700 fs-20 mb-3">{{ item.question }}</div>
							<div>{{ item.answer }}</div>
						</div>
					</div>
				</div>
				{% endfor %}
				</div>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<div class="how-works__description">*текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст текст.</div>
			</div>
		</div>
	</div>
</section>
